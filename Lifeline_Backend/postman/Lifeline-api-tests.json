		{
			"name": "WebSocket Info Endpoints",
			"item": [
				{
					"name": "Get Active Rooms Info",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const response = pm.response.json();",
									"",
									"pm.test(\"‚úÖ Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"‚úÖ Has rooms array\", function () {",
									"    pm.expect(response).to.have.property('rooms');",
									"    pm.expect(Array.isArray(response.rooms)).to.be.true;",
									"});",
									"",
									"pm.test(\"‚úÖ Has totalRooms count\", function () {",
									"    pm.expect(response).to.have.property('totalRooms');",
									"    pm.expect(typeof response.totalRooms).to.be('number');",
									"});",
									"",
									"pm.test(\"‚úÖ Has totalClients count\", function () {",
									"    pm.expect(response).to.have.property('totalClients');",
									"    pm.expect(typeof response.totalClients).to.be('number');",
									"});",
									"",
									"if (response.rooms && response.rooms.length > 0) {",
									"    pm.test(`‚úÖ Found ${response.rooms.length} active room(s)`, function () {",
									"        pm.expect(response.rooms.length).to.be.greaterThan(0);",
									"    });",
									"} else {",
									"    pm.test(\"‚ÑπÔ∏è  No active rooms (rooms not created yet)\", function () {",
									"        pm.expect(response.rooms.length).to.eql(0);",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/ws/rooms-info",
							"host": ["{{base_url}}"],
							"path": ["ws", "rooms-info"]
						},
						"description": "Get information about active WebSocket rooms and clients"
					},
					"response": []
				}

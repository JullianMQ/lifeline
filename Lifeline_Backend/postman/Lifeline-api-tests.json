			"name": "Authentication",
			"item": [
				{
					"name": "Sign In - Test User 1",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const response = pm.response.json();",
									"",
									"if (response.session && response.session.token) {",
									"    pm.environment.set(\"session_token\", response.session.token);",
									"    pm.test(\"‚úÖ Authentication successful - token saved\", true);",
									"} else {",
									"    pm.test(\"‚ùå Authentication failed\", false);",
									"}",
									"",
									"// Parse cookies for better-auth",
									"const cookies = pm.response.headers.get('set-cookie');",
									"if (cookies) {",
									"    const cookieArray = cookies.split(',');",
									"    cookieArray.forEach(cookie => {",
									"        if (cookie.includes('better-auth.session_token')) {",
									"            const tokenMatch = cookie.match(/better-auth\\.session_token=([^;]+)/);",
									"            if (tokenMatch) {",
									"                pm.environment.set(\"better_auth_token\", tokenMatch[1]);",
									"            }",
									"        }",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"test1@example.com\",\n  \"password\": \"password\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/sign-in/email",
							"host": ["{{base_url}}"],
							"path": ["auth", "sign-in", "email"]
						},
						"description": "Authenticate as test user 1 (mutual role)"
					},
					"response": []
				},

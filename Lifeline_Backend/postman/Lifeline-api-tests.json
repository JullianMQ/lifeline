					"name": "Upload Location - Test 1",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const response = pm.response.json();",
									"",
									"pm.test(\"‚úÖ Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"‚úÖ Success flag is true\", function () {",
									"    pm.expect(response.success).to.be.true;",
									"});",
									"",
									"pm.test(\"‚úÖ Has receivedAt timestamp\", function () {",

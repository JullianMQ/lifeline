		{
			"name": "Contacts API",
			"item": [
				{
					"name": "Get User Contacts - Test 1",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const response = pm.response.json();",
									"",
									"pm.test(\"‚úÖ Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"‚úÖ Has emergency contacts array\", function () {",
									"    pm.expect(response).to.have.property('emergency_contacts');",
									"    pm.expect(Array.isArray(response.emergency_contacts)).to.be.true;",
									"});",
									"",
									"pm.test(\"‚úÖ Has dependent contacts array\", function () {",
									"    pm.expect(response).to.have.property('dependent_contacts');",
									"    pm.expect(Array.isArray(response.dependent_contacts)).to.be.true;",
									"});",
									"",
									"// Save emergency contact phone numbers for testing",
									"if (response.emergency_contacts && response.emergency_contacts.length > 0) {",
									"    const emergencyPhones = response.emergency_contacts.map(c => c.phone_no);",
									"    pm.environment.set(\"emergency_contact_phones\", JSON.stringify(emergencyPhones));",
									"    pm.test(`‚úÖ Found ${emergencyPhones.length} emergency contacts: ${emergencyPhones.join(', ')}`, true);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/contacts/contacts/users?phone=09123456789",
							"host": ["{{base_url}}"],
							"path": ["contacts", "contacts", "users"],
							"query": [
								{
									"key": "phone",
									"value": "09123456789",
									"description": "Test user 1's phone number"
								}
							]
						},
						"description": "Get test user 1's emergency and dependent contacts"
					},
					"response": []
				},
